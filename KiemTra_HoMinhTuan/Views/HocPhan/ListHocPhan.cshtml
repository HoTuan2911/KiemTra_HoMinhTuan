@model IEnumerable<KiemTra_HoMinhTuan.Models.HocPhan>

@{
    ViewBag.Title = "ListHocPhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListHocPhan</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                    <p>@item.MaHP</p>
                    <p>@item.TenHP</p>
                    <p>@item.SoTinChi</p>      
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <div class="DatMua">
                            <a class="btn btn-success" href="@Url.Action("ThemHocPhan", "ThemHocPhan","HocPhan")">Đăng ký</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
