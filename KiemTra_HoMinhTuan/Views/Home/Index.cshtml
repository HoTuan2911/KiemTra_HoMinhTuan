@model IEnumerable<KiemTra_HoMinhTuan.Models.SinhVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DANH SÁCH SINH VIÊN</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã SV </th>
        <th> Tên SV</th>
        <th> Giới tính </th>
        <th> Ngày sinh</th>
        <th> Hình </th>
        <th> Mã Ngành</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaSV)</td>
            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
            <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
            <td><img src="@item.Hinh" alt="hinh thumbnail" /></td>
            <td>@Html.DisplayFor(modelItem => item.MaNganh)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Home") |
                @Html.ActionLink("Detail", "Detail", "Home") |
                @Html.ActionLink("Delete", "Delete", "Home")
            </td>
        </tr>
    }
</table>

